<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Hyperlink?>
<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.javafxapplication.HelloController"
          stylesheets="@styles.css" fx:id="gridPane">

    <Button text="Otvor..." onAction="#handleClick" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Button text="Tlačidlo 2" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button text="Tlačidlo 3" id="button_three" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
    <Button text="Tlačidlo 4" GridPane.rowIndex="0" GridPane.columnIndex="3" fx:id="button4"/>
    <Button text="Tlačidlo 5" GridPane.rowIndex="0" GridPane.columnIndex="4"/>

    <RadioButton text="Voľba 1" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

    <Label text="JavaFX Efekty" fx:id="label" GridPane.rowIndex="1" GridPane.columnIndex="1"
    onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit"/>

    <Hyperlink text="https://openjfx.io/" GridPane.rowIndex="3" GridPane.columnIndex="0" onAction="#handleLinkClick"/>

</GridPane>
